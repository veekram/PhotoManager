<!DOCTYPE html>
<html>
  <head>
    <title>PhotoManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div class="current-user-header">
        <%= "You are currently logged in as #{current_user.identity}" %> | <%= link_to 'Home', photos_path %> | <%= link_to 'Logout', logout_path, method: :delete %>
      </div>
    <% else %>
      <div class="login-signup-header">
        <%= link_to 'Login', login_path %> or <%= link_to 'Sign Up', users_new_path %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
